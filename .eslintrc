{
  "extends": ["airbnb-base", "plugin:jest/recommended", "plugin:react/recommended"],
  "env": {
    "es6": true,
    "node": true,
    "jest/globals": true,
    "browser": true
  },
  "plugins": ["jest", "react"],
  "rules": {
    "arrow-body-style": ["error", "as-needed"]
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  }
}
