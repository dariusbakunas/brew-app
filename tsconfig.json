{
  "compilerOptions": {
    "noImplicitAny": true,
    "removeComments": true,
    "target": "es2015",
    "lib": ["es6", "dom", "esnext"],
    "baseUrl": ".",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "outDir": "build",
    "sourceMap": true,
    "typeRoots": [ "./types", "./node_modules/@types"]
  }
}
